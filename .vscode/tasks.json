{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pytest: all",
            "type": "shell",
            "command": "${workspaceFolder}/run_tests.sh",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "pytest: file",
            "type": "shell",
            "command": "${workspaceFolder}/run_tests.sh",
            "args": [
                "${file}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}